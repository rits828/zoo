{{ 'faqs.css' | asset_url | stylesheet_tag }}
<div class="faq-accordion page-width {{ section.id }}">
  {% if section.settings.heading != blank %}
    <h2 class="faq-heading">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="listing">
    <div class="faq-list--items">
    {% for block in section.blocks %}
      {% if block.settings.question != blank %}
        <div class="faq-item">
          <button class="faq-question" onclick="toggleFAQ(this)">
            {{ block.settings.question }}
            <span class="faq-symbol">+</span>
          </button>
          <div class="faq-answer hidden">
            {{ block.settings.answer }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  </div>
</div>
<style>
   .{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  @media (min-width: 768px) {
    .{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
</style>
<script>
  function toggleFAQ(button) {
    const answer = button.nextElementSibling;
    const symbol = button.querySelector('.faq-symbol');
    const isOpen = !answer.classList.contains('hidden');

    document.querySelectorAll('.faq-answer').forEach(el => el.classList.add('hidden'));
    document.querySelectorAll('.faq-symbol').forEach(el => el.textContent = '+');

    if (!isOpen) {
      answer.classList.remove('hidden');
      symbol.textContent = 'âˆ’';
    }
  }
</script>
{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top Padding (Desktop)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Bottom Padding (Desktop)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title"
    },
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "FAQ Accordion"
    }
  ]
}
{% endschema %}
