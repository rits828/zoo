{{ 'product-comfort--hp.css' | asset_url | stylesheet_tag }}
<div>
  <div class="product-comfort--section {{ section.id }} page-width">
    <div class="product-container {{ section.settings.image_alignment }}">
      <div class="img-block">
        {% if section.settings.image != blank %}
          {% render 'responsive-picture',
            img-class: '',
            mobileImage: section.settings.image_mobile,
            desktopImage: section.settings.image
          %}
        {% endif %}
      </div>
      <div class="text-block">
        {% if section.settings.span_text != blank %}
        <p class="product-span--text">{{ section.settings.span_text }}</p>
        {% endif %}
        {% if section.settings.block_heading != blank %}
          <h2 class="prod-heading">{{ section.settings.block_heading }}</h2>
        {% endif %}
        {% if section.settings.block_text != blank %}
          <p class="prod-text">{{ section.settings.block_text }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>
<style>
     .{{ section.id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }
    @media (min-width: 768px) {
      .{{ section.id }} {
        padding-top: {{ section.settings.padding_top_desktop }}px;
        padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      }
      .product--{{ section.id }} {
        
      }
  }
</style>
{% schema %}
{
  "name": "Product Comfort",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top Padding (Desktop)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Bottom Padding (Desktop)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Block Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Block Image Mobile"
    },
    {
      "type": "text",
      "id": "span_text",
      "label": "Span Text"
    },
    {
      "type": "text",
      "id": "block_heading",
      "label": "Block Heading"
    },
    {
      "type": "richtext",
      "id": "block_text",
      "label": "Block Text"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image Position",
      "options": [
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "left"
  }
  ],
  "presets": [
    {
       "name": "Product Comfort"
    }
  ]
}
{% endschema %}
