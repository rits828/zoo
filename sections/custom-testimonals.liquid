{{ 'custom-testimonals.css' | asset_url | stylesheet_tag }}
<div class="custom-testimonals--section page-width {{ section.id }}">
  {% if section.settings.heading != blank %}
    <h2 class="testimonials-heading">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="testimonial-blocks">
    {% for block in section.blocks %}
      <div class="individual-block">
        <div class="name-desig">
          <div class="cust-image">
            {% if block.settings.image != blank %}
              {% render 'responsive-picture' class = 'image' mobileImage: block.settings.image, desktopImage: block.settings.image %}
            {% endif %}
          </div>
          <div class="cust-name">
            {% if block.settings.cust_name != blank %}
              <p>{{ block.settings.cust_name }}</p>
            {% endif %}
            {% if block.settings.cust_designation != blank %}
              <span>{{ block.settings.cust_designation }}</span>
            {% endif %}
          </div>
        </div>
        <div class="customer-words">
          {% if block.settings.cust_words != blank %}
            <p>{{ block.settings.cust_words }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<style>
   .{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  @media (min-width: 768px) {
    .{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
</style>
{% schema %}
{
  "name": "Custom Testimonials",
  "settings": [
    {
    "type": "header",
    "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top Padding (Desktop)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Bottom Padding (Desktop)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "testimonial_block",
      "name": "Testimonial Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "cust_name",
          "label": "Customer Name"
        },
        {
          "type": "text",
          "id": "cust_designation",
          "label": "Customer Designation"
        },
        {
          "type": "richtext",
          "id": "cust_words",
          "label": "Customer Words"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Testimonials"
    }
  ]
}
{% endschema %}
